{
    "name": "api",
    "version": "2.0.0b",
    "scripts": {
        "dev": "wrangler dev",
        "dev:setup": "drizzle-kit generate && tsx src/scripts/db/migrate.mts && pnpm dev",
        "wrangler:dev:local": "wrangler dev",
        "wrangler:dev:remote": "wrangler dev --remote",
        "wrangler:publish": "wrangler publish --minify",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "typecheck": "tsc --noEmit",
        "prettier:write": "prettier --write .",
        "prettier:check": "prettier --check .",
        "drizzle:generate": "drizzle-kit generate",
        "drizzle:migrate": "tsx src/scripts/db/migrate.mts",
        "drizzle:seed": "tsx src/scripts/db/seed.ts",
        "drizzle:push": "drizzle-kit push",
        "drizzle:dev:init": "drizzle-kit generate && tsx src/scripts/db/migrate.mts",
        "drizzle:studio": "drizzle-kit studio --port 7331 --host 127.0.0.1 --verbose"
    },
    "devDependencies": {
        "@asteasolutions/zod-to-openapi": "^7.3.0",
        "@cloudflare/workers-types": "^4.20250129.0",
        "@types/node": "^22.13.1",
        "dotenv": "^16.4.7",
        "drizzle-kit": "^0.25.0",
        "eslint": "^9.19.0",
        "husky": "^9.1.7",
        "tsx": "^4.19.2",
        "typescript": "^5.7.3",
        "wrangler": "4.25.0"
    },
    "private": true,
    "dependencies": {
        "@axiomhq/js": "1.2.0",
        "@faker-js/faker": "^9.4.0",
        "@hono-rate-limiter/cloudflare": "^0.2.2",
        "@hono/swagger-ui": "^0.4.1",
        "@hono/zod-openapi": "^0.16.4",
        "@libsql/client": "0.14.0",
        "@oslojs/crypto": "^1.0.1",
        "@oslojs/encoding": "^1.1.0",
        "@scalar/hono-api-reference": "^0.5.170",
        "@typescript-eslint/eslint-plugin": "^8.23.0",
        "better-auth": "^1.2.10",
        "better-sqlite3": "^11.8.1",
        "dayjs": "^1.11.13",
        "drizzle-orm": "^0.34.1",
        "drizzle-zod": "^0.5.1",
        "hono": "^4.6.20",
        "hono-rate-limiter": "^0.4.2",
        "oslo": "^1.2.1",
        "prettier": "^3.4.2",
        "vitest": "^2.1.9",
        "zod": "^3.24.1",
        "zod-error": "^1.5.0"
    }
}
